<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="White"/>

    </Style>

    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}" >

        <Setter Property="TextBlock.Foreground" Value="Black"/>
        
        <Setter Property="TextBlock.Padding" Value="10"/>
    </Style>

    



    <Style x:Key="TextBlockJustifyStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="TextBlock.TextAlignment" Value="Justify"/>

    </Style>

  


    <Style x:Key="MenuStyle" >

        <Setter Property="Menu.Foreground" Value="Black"/>
        <Setter Property="Control.Background" Value="#FFE4F0F7"/>
        

    </Style>


    <Style x:Key="ToolBarStyle" >

        <Setter Property="ToolBar.Foreground" Value="Black"/>
        <Setter Property="ToolBar.Background" Value="#FFE4F0F7"/>

        

    </Style>




</ResourceDictionary>