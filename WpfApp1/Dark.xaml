<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>

    </Style>

    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}" >

        <Setter Property="TextBlock.Foreground" Value="White"/>
       
        <Setter Property="TextBlock.Padding" Value="10"/>
    </Style>

   

    <Style x:Key="TextBlockJustifyStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="TextBlock.TextAlignment" Value="Justify"/>

    </Style>

   


    <Style x:Key="MenuStyle" >

        <Setter Property="Menu.Foreground" Value="White"/>
        <Setter Property="Control.Background" Value="Gray"/>
       
    </Style>


    <Style x:Key="ToolBarStyle" >

        <Setter Property="ToolBar.Foreground" Value="White"/>
        <Setter Property="ToolBar.Background" Value="Gray"/>
        
        

    </Style>

    
</ResourceDictionary>